@model IEnumerable<Branch>

    <hr />
    <h2>Branchs</h2>
    <hr />
    <a class="btn btn-success" asp-controller="Branch" asp-action="Create">Create Branch</a>
    <hr />
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Branch Name</th>
            <th scope="col">Branch Address</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <th scope="row">@item.BranchName</th>
            <td>@item.Address</td>
            <td>
                <a class="btn btn-info" asp-controller="Branch"
                   asp-action="edit"
                   asp-route-id="@item.BranchId">Edit</a>
            </td>
            <td>
                <a class="btn btn-danger" asp-controller="Branch"
                   asp-action="delete"
                   asp-route-id="@item.BranchId">Delete</a>
            </td>
        </tr>
        }

    </tbody>
</table>