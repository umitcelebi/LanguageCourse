@model IEnumerable<Course>

@{ 
    ViewData["Title"] = "Courses";
}

<hr />
<div class="alert alert-info">
    <h2>Courses</h2>
</div>
<hr />
<a class="btn btn-success" asp-controller="Course" asp-action="Create">Create Course</a>
<hr />

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Course Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.CourseName</th>
                <td>
                    <a class="btn btn-info" asp-controller="Course"
                       asp-action="edit"
                       asp-route-id="@item.CourseId">Edit</a>
                </td>
                <td>
                    <a class="btn btn-danger" asp-controller="Course"
                       asp-action="delete"
                       asp-route-id="@item.CourseId">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>